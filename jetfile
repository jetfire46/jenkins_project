pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git url: 'https://github.com/sadhixadmin/pharmaproject.git', branch: 'main'
            }
        }

        stage('Deploy') {
            steps {
                sshagent(['nginx-ssh']) {
                    sh 'scp -o StrictHostKeyChecking=no index.html ubuntu@65.0.135.30:/var/www/html/'
                }
            }
        }
    }
}
