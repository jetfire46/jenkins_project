pipeline {
    agent any

    tools {
        nodejs "node16"   // Jenkins NodeJS tool
    }

    environment {
        NODEJS_USER = "root"
        NODEJS_PASSWORD = "admin"
        NODEJS_IP = "65.0.135.30"
        APP_NAME = "sample-node-project"
        DEPLOY_DIR = "/${NODEJS_USER}/${APP_NAME}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Checking out source code...'
                git branch: 'main', url: 'https://github.com/jetfire46/jenkins_project.git'
            }
        }

        // üëá Fix missing system library
        stage('Install System Dependencies') {
            steps {
                script {
                    echo 'üß© Ensuring libatomic is installed...'
                    sh '''
                        if [ -x "$(command -v apt-get)" ]; then
                            sudo apt-get update -y
                            sudo apt-get install -y libatomic1 sshpass
                        elif [ -x "$(command -v yum)" ]; then
                            sudo yum install -y libatomic sshpass
                        else
                            echo "‚ö†Ô∏è Unsupported package manager. Please install libatomic manually."
                        fi
                    '''
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'üì¶ Installing Node.js dependencies...'
                sh 'npm install'
            }
        }

        stage('Build and Package') {
            steps {
                echo 'üèóÔ∏è Building project...'
                sh 'npm run build || echo "No build script found"'
            }
        }

        stage('Deploy to Server') {
            steps {
                echo 'üöÄ Deploying to remote server...'
                script {
                    sh """
                    sshpass -p '${NODEJS_PASSWORD}' ssh -o StrictHostKeyChecking=no ${NODEJS_USER}@${NODEJS_IP} '
                        mkdir -p ${DEPLOY_DIR}
                    '
                    sshpass -p '${NODEJS_PASSWORD}' scp -r ${WORKSPACE}/* ${NODEJS_USER}@${NODEJS_IP}:${DEPLOY_DIR}/
                    sshpass -p '${NODEJS_PASSWORD}' ssh -o StrictHostKeyChecking=no ${NODEJS_USER}@${NODEJS_IP} '
                        cd ${DEPLOY_DIR} &&
                        pm2 stop ${APP_NAME} || true &&
                        pm2 start app.js --name ${APP_NAME}
                    '
                    """
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Node.js Build and Deployment Successful'
        }
        failure {
            echo '‚ùå Build or Deployment Failed'
        }
    }
}
